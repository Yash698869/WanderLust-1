<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><%= listing.title %></h3>

    <div class="card col-6 mt-2 listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
    </div>
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %><br /><!-- for comas in indians std -->
        <%= listing.location %> <br />
        <%= listing.country %> <br />
      </p>
      <br />
    </div>
  </div>

  <div class="btns">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark"
      style="background-color: #fe424d; border: none"
      >Edit this Listings</a
    >
  </div>
  <br /><br />
  <div class="btns">
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark">Delete this Listings</button>
    </form>
  </div>

  <div class="col-8 offset-2 mb-2">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
        />
      </div>
      <div class="mb-3 mt-3">
        <label class="form-label" for="comment">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="15"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          PLz submit some valid feedback for review
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="row g-3 ms-1">
      <% for (let review of listing.reviews) { %>
      <div class="col-12 col-md-6">
        <!-- 2 per row on medium screens -->
        <div class="card p-2">
          <div class="card-body">
            <h5 class="card-title">Jane Doe</h5>
            <p class="card-text">
              <%= review.comment %> <br />
              <%= review.rating %> stars
            </p>
            <form
              method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              class="mb-1"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
