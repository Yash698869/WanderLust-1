<% layout("/layouts/boilerplate") -%>

<h3 class="jakarta"><b>All Listings</b></h3>

<!-- <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
  </form> -->

<!-- making Cards and stoing images like this { filename: "...", url: "..." } listing.image.url -->

<div class="rows mt-4 jakarta">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(let listing of allListings){ %>
      <div class="col">
        <div class="card h-100 jakarta listing-card">
      
          <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none; color: inherit;">
      
            <!-- ✅ Change card-img-top to card-img -->
            <img
              src="<%= listing.image.url || 'https://via.placeholder.com/300' %>"
              class="card-img"
              alt="listing_image"
              style="height: 20rem; object-fit: cover;"
            />
      
            <!-- ✅ Overlay must come immediately after image -->
            <div class="card-img-overlay d-flex justify-content-center align-items-center">
              
            </div>
      
            <div class="card-body jakarta">
              <h5 class="card-title"><b><%= listing.title %></b></h5>
              <p class="card-text">
                &#8377;<%= listing.price.toLocaleString("en-IN") %>
              </p>
            </div>
      
          </a>
      
        </div>
      </div>
           
    <% } %>
  </div>
</div>
