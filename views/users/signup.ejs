<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <!-- Username -->
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required
            />
          <div class="valid-feedback">
            <!-- this will apear if we complete that validatons -->
            Looks good!
          </div>

        <!-- Email -->
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              required
            />

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                  name="password"
                  id="password"
                  type="password"
                  class="form-control"
                  required
                />
              <div class="valid-feedback">
                <!-- this will apear if we complete that validatons -->
                Looks good!
              </div>
              <button class="btn btn-success mt-2">SignUp</button>

        </form>
  </div>
</div>
